@model IEnumerable<Student>

<h1 class="alert alert-primary text-center m-3">
    Student Index
</h1>



@if (Model.Any())
{
    <table class="table table-bordered table-hover caption-top text-center">
        <caption class="text-center fs-1">Students</caption>
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(ins => ins.Id)</th>
                <th>@Html.DisplayNameFor(ins => ins.Name)</th>
                <th>@Html.DisplayNameFor(ins => ins.Degree)</th>
                <th>@Html.DisplayNameFor(ins => ins.ImageUrl)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => student.Id)</td>
                    <td>@Html.DisplayFor(m => student.Name)</td>
                    <td>@Html.DisplayFor(m => student.Degree)</td>
                    <td>
                        <img src="@Url.Content("~/"+student.ImageUrl)" alt="Student Image" class="img-thumbnail" style="max-width:100px; object-fit:cover;" />
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Student" asp-action="Details" asp-route-id="@student.Id">Details</a>
                        <a class="btn btn-warning btn-sm" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center">
        No students available.
    </div>
}
