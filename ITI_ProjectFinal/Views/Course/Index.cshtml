@model IEnumerable<Course>

<div class="mb-3">
    <form method="get" asp-controller="Course" asp-action="Get" class="d-flex">
        <input name="search" value="@ViewBag.CurrentSearch" class="form-control me-2" placeholder="Search by name " />
        <button type="submit" class="btn btn-secondary"><i class="bi bi-search"></i></button>
    </form>
</div>
